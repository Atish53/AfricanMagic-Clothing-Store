@model IEnumerable<AfricanMagicSystem.Models.Product>

@{
    ViewBag.Title = "View Low Stock";
}

<h2>View Low Stock</h2>
<br />

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Stock)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        if (item.Stock < 40)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Stock)
                </td>
                <td>
                    @Html.ActionLink("Generate Stock", "GenerateLow", new { id = item.ID })
                </td>
            </tr>
        }

    }

</table>
