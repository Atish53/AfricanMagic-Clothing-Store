<div class="bs-component">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-header">
            @Html.ActionLink("AfricanMagic", "Index", "Home", null, new { @class = "navbar-brand" })

        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                {
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Administrator Functions <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Sales", "Index", "Sales")</li>
                            <li>@Html.ActionLink("Categories", "Index", "ProductCategories")</li>
                            <li>@Html.ActionLink("Promotions", "Index", "Promotions")</li>
                            <li>@Html.ActionLink("Analytics", "Index", "Analytics")</li>
                            <li>@Html.ActionLink("Deliveries", "Index", "Deliveries")</li>
                            <li>@Html.ActionLink("Support", "Index", "ReturnItems")</li>
                            <li>@Html.ActionLink("Supplier", "Index", "SupplierShippings")</li>
                            <li>@Html.ActionLink("Bulk System", "Index", "BulkOrderImages")</li>
                            <li>@Html.ActionLink("Comments", "Index", "CustomerReviews")</li>
                            <li>@Html.ActionLink("Pending Bulk Orders", "Index", "BulkOrderSales")</li>
                            <li>@Html.ActionLink("Generate Purchase Order", "ViewLowStock", "PurchaseOrders")</li>
                            <li class="divider"></li>
                            <li class="dropdown-header">Roles Admin</li>
                            <li>@Html.ActionLink("Manage User Roles", "Index", "RolesAdmin")</li>
                            <li>@Html.ActionLink("Manage Users", "Index", "UsersAdmin")</li>
                        </ul>
                    </li>
                }
                @if (Request.IsAuthenticated && User.IsInRole("Business"))
                {
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Business User Functions<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("View Current Quote", "Index", "Storages")</li>
                            <li>@Html.ActionLink("Make Custom", "MakeCustom", "CustomDesigns")</li>
                        </ul>
                    </li>
                }


                @if (Request.IsAuthenticated && !User.IsInRole("Business"))
                {
                    <li>@Html.ActionLink("Products", "Index", "Products")</li>
                }
                else
                {
                    <li>@Html.ActionLink("Products", "Index", "BulkOrderImages")</li>
                    <li>@Html.ActionLink("View Orders", "CustomerIndex","BulkOrderSales")</li>
                }

                @if(Request.IsAuthenticated && User.IsInRole("Supplier"))
                {
                    <li>@Html.ActionLink("Order Status", "Index", "SupplierShippings")</li>
                }


                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">About us <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li class="divider"></li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        <li class="divider"></li>
                        <li>@Html.ActionLink("Support", "Create", "ReturnItems")</li>
                    </ul>
                </li>
            </ul>

            @Html.Partial("_LoginPartial")

        </div>

    </div>
</div>

