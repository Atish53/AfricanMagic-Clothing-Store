@model IEnumerable<AfricanMagicSystem.Models.Sale>

@{
    ViewBag.Title = "Track Orders";
}

<h2>Track Orders</h2>


<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.SaleId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SaleDate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SaleId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SaleDate)
            </td>

            <td>
                @Html.ActionLink("Track Order", "Details", new { id = item.SaleId })
            </td>
        </tr>
    }

</table>
