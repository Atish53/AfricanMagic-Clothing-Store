@model AfricanMagicSystem.Models.CustomDesignSales
@using AfricanMagicSystem.Extensions


@{
    ViewBag.Title = "Update Progress";
}

<h2>Edit</h2>


@using (Html.BeginForm("Edit", "CustomDesignSales", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.CustomSalesID)
    @Html.HiddenFor(model => model.DesignID)
    @Html.HiddenFor(model => model.Email)
    @Html.HiddenFor(model => model.Colour)
    @Html.HiddenFor(model => model.Size)
    @Html.HiddenFor(model => model.Quantity)
    @Html.HiddenFor(model => model.TotalAmount)
    @Html.HiddenFor(model => model.ShirtText)    
    @Html.HiddenFor(model => model.CustomSalesName)    
    @Html.HiddenFor(model => model.Completed)    
    @Html.HiddenFor(model => model.Paid)    

<div class="form-horizontal">     
    <hr />
    <p class="text-info text-center" style="font-size:26px;">Current Mock-up</p>
    <hr />
    <img src="@Url.Action("RenderImage","CustomDesignSales", new { id = Model.CustomSalesID })" class="img-responsive img-rounded" style=" max-width: 600px; max-height: 800px;background-size: contain;" />
    <hr />

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    

    <div class="form-group">
        <div class="editor-label">
            Upload Mock-up
        </div>
        <div class="editor-field">
            @Html.FileFor(model => model.File)
            @Html.ValidationMessageFor(model => model.File)
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Update Progress" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
